$brand = #598765

body
  font-family: 'Source Sans Pro', sans-serif
  font-size: 14px
  margin: 1em 0
  .content
    background-color: #fff
    max-width: 900px
    margin: 0 auto
    border: 2px solid $brand
h1
  font-size: 4em
  color: #fff
  margin: 0
  text-align: center
  font-weight: 300
  width: 100%
  box-sizing: border-box

  background-image: url('green_dust_scratch.png')
.address
  font-size: 1.2em
.fa
  font-size: 2em !important
  color: $brand
section
  &.profile
    display: flex
    align-items: center
    flex-direction: column
  .address
    color: rgba(0,0,0,0.5)
  .grid
    display: grid
    width: 50vw
    grid-template-columns: 1fr 1fr
  .tag-container
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    margin-top: 2em
.job, .education
  display: flex
  font-size: 1.5em
  &:nth-child(n+4)
    color: rgba(0,0,0,.5)
    font-size: 1em
    padding: 0 25px
  &:nth-child(-n+3)
    font-weight: bold
  .when, .what
    flex: 1
    padding: 0.25em 25px

  .when
    text-align: right
    padding-right: 1.25em
  .what
    text-align: left
    padding-left: 1.25em


.heading
  display: flex
  align-items: center
  justify-content: center
  h2
    margin: 2em 0em
    padding: 0.25em 1em
    background-color: $brand
    color: #fff
    white-space: nowrap
  .line
    height: 2px
    width: 100%
    background-color: $brand
.courses
  display: flex
  flex-direction: column
  align-items: center
  justify-content: center
  .course
    font-size: 1.5em
    width: 50%
    padding: 0.5em 0.5em
