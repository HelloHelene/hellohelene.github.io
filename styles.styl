$brand = #2fb77c

body
  font-family: 'Source Sans Pro', sans-serif
  font-size: 14px
  margin: 2em 5em
h1
  font-size: 4em
  color: $brand
  font-weight: 300
  margin: 0
.address
  font-size: 1.2em
.fa
  font-size: 2em !important
  color: $brand
section
  &.profile
    display: flex
    align-items: center
    flex-direction: column
  .address
    color: rgba(0,0,0,0.5)
  .grid
    display: grid
    width: 50vw
    grid-template-columns: 1fr 1fr
  .tag-container
    display: flex
    flex-direction: column
    align-items: center
    justify-content: center
    margin-top: 2em
.job, .education
  display: flex
  font-size: 2em
  &:nth-child(n+4)
    color: rgba(0,0,0,.5)
    font-size: 1.5em
    padding: 0 1em
  &:nth-child(-n+3)
    font-weight: bold
  .when, .what
    flex: 1
    padding: 0.25em 1em

  .when
    text-align: right
    padding-right: 1.25em
  .what
    text-align: left
    padding-left: 1.25em


.heading
  display: flex
  align-items: center
  justify-content: center
  h2
    margin: 2em 1em
    white-space: nowrap
  .line
    height: 2px
    width: 100%
    background-color: $brand
.courses
  text-align: center
  .course
    font-size: 1.5em
    padding: 0.5em
